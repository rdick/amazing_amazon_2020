<div class='row'>
  <div class='col-2'>
  </div>

  <div class='col-10'>
    <div class='list-group'>
      <% @products.each do |product| %>
        <%= link_to product do %>
          <li class='list-group-item'>
            <p><span class='badge badge-light'><%= product.id %></span> <%= product.title %></p>
            <small>Last Updated: <%= time_ago_in_words product.updated_at %></small>
          </li>
        <% end %>
      <% end %>
    </div>
  </div>
</div> 
